@page "/counter"

<PageTitle>Donate</PageTitle>

<h3>Please donate lunch money.</h3>

<p role="status">AUD: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click to donate</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}
